# Database Configuration
DATABASE_URL=postgresql://clens_user:password@localhost:5432/clens_db

# Security Keys
SECRET_KEY=change-this-secret-key-in-production-min-32-chars
ENCRYPTION_KEY=change-this-encryption-key-base64-44chars

# JWT Configuration
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Face Recognition Configuration
FACE_MODEL=Facenet512
FACE_SIMILARITY_THRESHOLD=0.80
FACE_DETECTOR_BACKEND=opencv

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# File Upload
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Environment
ENVIRONMENT=development
